<%= link_to 'Back to Bookstore', books_path %>

<h1>Your Purchased Books</h1>

<% if @purchased_books.present? %>
  <ul>
    <% @purchased_books.each do |book| %>
      <li><%= link_to "#{book.title} by #{book.author}", book_path(book) %></li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't purchased any books yet.</p>
<% end %>
